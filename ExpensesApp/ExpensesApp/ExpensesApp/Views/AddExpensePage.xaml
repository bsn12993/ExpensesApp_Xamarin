<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpensesApp.Views.AddExpensePage"
             BindingContext="{Binding Main,Source={StaticResource Locator}}"
             Title="Add Expense">
    <ContentPage.Content>
        <StackLayout
            BindingContext="{Binding Expense}"
            Padding="10,20,10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Column="0"
                    Grid.Row="0"
                    HorizontalOptions="StartAndExpand"
                    VerticalOptions="Center"
                    TextColor="Black"
                    FontSize="Medium"
                    Text="Gasto"/>
                <Entry 
                    Grid.Column="1"
                    Grid.Row="0"
                    Keyboard="Numeric"
                    Text="{Binding Amount}"
                    Placeholder="Gasto"/>
                <Label
                    Grid.Column="0"
                    Grid.Row="1"
                    HorizontalOptions="StartAndExpand"
                    VerticalOptions="Center"
                    TextColor="Black"
                    FontSize="Medium"
                    Text="Categoria"/>
                <Picker 
                    Grid.Column="1"
                    Grid.Row="1"
                    ItemsSource="{Binding Categories}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding CategoySelected}">
                </Picker>
            </Grid>
            <ActivityIndicator
                VerticalOptions="CenterAndExpand"
                IsRunning="{Binding IsRunning,Mode=TwoWay}"/>
            <Button
                VerticalOptions="End"
                HorizontalOptions="FillAndExpand"
                Command="{Binding SaveExpenseCommand}"
                Text="Save"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>