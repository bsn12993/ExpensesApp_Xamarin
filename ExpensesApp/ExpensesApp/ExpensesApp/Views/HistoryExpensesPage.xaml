<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fab="clr-namespace:SuaveControls.Views;assembly=SuaveControls.FloatingActionButton"
             x:Class="ExpensesApp.Views.HistoryExpensesPage"
             BindingContext="{Binding Main,Source={StaticResource Locator}}"
             Title="History Expenses">
    <ContentPage.Content>
        <ScrollView>
            <RelativeLayout
                BindingContext="{Binding HistoryExpenses}">
                <ActivityIndicator
                IsRunning="{Binding IsRunning}"
                RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1, Constant=-200}"  
                RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1, Constant=-500}"/>
                <ContentView
                    RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}"
                    RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1}">
                    <StackLayout
                        Margin="5,20">
                        <Label
                            Text="{Binding Total,StringFormat='${0:N}'}"
                            FontSize="Medium"
                            TextColor="Black"
                            VerticalOptions="StartAndExpand"
                            HorizontalOptions="CenterAndExpand"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Column="0"
                                Grid.Row="0"
                                Text="Categoria"
                                FontSize="Medium"
                                TextColor="Black"
                                VerticalOptions="Start"
                                HorizontalOptions="Center"/>
                            <Label
                                Grid.Column="1"
                                Grid.Row="0"
                                Text="Monto"
                                FontSize="Medium"
                                TextColor="Black"
                                VerticalOptions="Start"
                                HorizontalOptions="Center"/>
                            <Label
                                Grid.Column="2"
                                Grid.Row="0"
                                Text="Fecha"
                                FontSize="Medium"
                                TextColor="Black"
                                VerticalOptions="Start"
                                HorizontalOptions="Center"/>
                        </Grid>
                        <ListView
                            ItemsSource="{Binding Expenses}"
                            HasUnevenRows="True"
                            SeparatorVisibility="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Label
                                                Grid.Column="0"
                                                Text="{Binding Category.Name}"
                                                FontSize="Default"
                                                TextColor="Black"
                                                VerticalOptions="CenterAndExpand"
                                                HorizontalOptions="CenterAndExpand"/>
                                            <Label
                                                Grid.Column="1"
                                                Text="{Binding Amount,StringFormat='${0:N}'}"
                                                FontSize="Default"
                                                TextColor="Black"
                                                VerticalOptions="CenterAndExpand"
                                                HorizontalOptions="CenterAndExpand"/>
                                            <Label
                                                Grid.Column="2"
                                                Text="{Binding Date}"
                                                FontSize="Default"
                                                TextColor="Black"
                                                VerticalOptions="CenterAndExpand"
                                                HorizontalOptions="CenterAndExpand"/>
                                        </Grid>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackLayout>
                </ContentView>
                <fab:FloatingActionButton
                    Image="ic_add_fab.png"
                    ButtonColor="#399BF1"
                    WidthRequest="80"
                    HeightRequest="90"
                    RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1, Constant=-100}"  
                    RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=1, Constant=-120}"/>
            </RelativeLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>