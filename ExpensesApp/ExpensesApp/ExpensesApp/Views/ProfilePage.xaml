<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpensesApp.Views.ProfilePage"
             BindingContext="{Binding Main,Source={StaticResource Locator}}"
             Title="Profile">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout
                Margin="20,20"
                BindingContext="{Binding Profile}">
                <Image
                    WidthRequest="100"
                    Source="xamarin"/>
                <StackLayout>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="Name"/>
                        <Entry
                            Grid.Row="0"
                            Grid.Column="1"
                            Text="{Binding Name,Mode=TwoWay}"/>

                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Text="LastName"/>
                        <Entry
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding LastName,Mode=TwoWay}"/>

                        <!--<Label
                            Grid.Row="2"
                            Grid.Column="0"
                            Text="User"/>
                        <Entry
                            Grid.Row="2"
                            Grid.Column="1"
                            Text="{Binding User}"/>-->

                        <Label
                            Grid.Row="3"
                            Grid.Column="0"
                            Text="Password"/>
                        <Entry
                            Grid.Row="3"
                            Grid.Column="1"
                            IsPassword="True"
                            Text="{Binding Password,Mode=TwoWay}"/>

                        <Label
                            Grid.Row="4"
                            Grid.Column="0"
                            Text="Email"/>
                        <Entry
                            Grid.Row="4"
                            Grid.Column="1"
                            Text="{Binding Email,Mode=TwoWay}"/>
                    </Grid>
                    <!--<ActivityIndicator
                    IsRunning="t"
                    IsVisible=""/>-->
                    <Button
                        VerticalOptions="EndAndExpand"
                        HorizontalOptions="FillAndExpand"
                        Text="Save"
                        Command="{Binding UpdateUserCommand}}"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>